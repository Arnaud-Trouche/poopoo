        <Grid  DockPanel.Dock="Bottom" Background="AliceBlue" >
            <DockPanel>
                <StackPanel Orientation="Vertical">
                    <Label Content="Peuple 1" ></Label>
                    <StackPanel Orientation="Horizontal">
